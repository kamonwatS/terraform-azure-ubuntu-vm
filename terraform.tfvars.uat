yenvironment         = "uat"
resource_group_name = "rg-ubuntu-vm-uat"
prefix              = "uat-ubuntu"
location            = "Southeast Asia"

# Network configuration
vnet_address_space      = "10.2.0.0/16"
subnet_address_prefix   = "10.2.1.0/24"

# VM configuration
vm_size               = "Standard_B2as_v2"  # 2 vCPU, 4GB RAM - same as dev
storage_account_type  = "Standard_LRS"  # Same storage as dev
admin_username        = "azureuser"

# Project settings
project_name = "ubuntu-vm-project" 